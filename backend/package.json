{
  "name": "oxy-backend",
  "version": "2.0.0",
  "description": "Oxy - Sistema de Automação WhatsApp para Clínicas Médicas com Dupla Camada de IA",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:workers": "tsx watch src/worker-server.ts",
    "prebuild": "npm install @types/cookie-parser@^1.4.9",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:workers": "node dist/worker-server.js",
    "workers:start": "tsx src/worker-server.ts",
    "workers:message": "tsx src/queue/workers/message.worker.ts",
    "workers:campaign": "tsx src/queue/workers/campaign.worker.ts",
    "workers:automation": "tsx src/queue/workers/automation.worker.ts",
    "queues:monitor": "tsx src/queue/monitoring/bull-board.ts",
    "queues:clean": "tsx src/queue/scripts/clean-jobs.ts",
    "queues:retry-failed": "tsx src/queue/scripts/retry-failed.ts",
    "queues:test": "tsx src/queue/scripts/smoke-test.ts",
    "queues:test-message": "tsx src/queue/scripts/test-message-flow.ts",
    "queues:test-automation": "tsx src/queue/scripts/test-automation-flow.ts",
    "queues:test-campaign": "tsx src/queue/scripts/test-campaign-flow.ts",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "migration:create": "tsx src/scripts/create-migration.ts",
    "migration:run": "tsx src/scripts/run-migrations.ts",
    "seed": "tsx scripts/seed.ts",
    "simulate:event": "tsx scripts/simulate-event.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@bull-board/api": "^6.13.0",
    "@bull-board/express": "^6.13.0",
    "@bull-board/ui": "^6.13.0",
    "@supabase/supabase-js": "^2.58.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.16.5",
    "@types/qrcode": "^1.5.5",
    "@whiskeysockets/baileys": "^6.7.20",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.59.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.73.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1",
    "typescript": "^5.8.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "tsx": "^4.19.2",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
