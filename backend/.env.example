# ==========================================
# Supabase Configuration
# ==========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
# Can use either SUPABASE_SERVICE_ROLE_KEY (Render default) or SUPABASE_SERVICE_KEY (legacy)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ==========================================
# Redis (Upstash) Configuration
# ==========================================
# Get these from: https://console.upstash.com/redis/YOUR_REDIS
REDIS_URL=rediss://default:password@your-redis.upstash.io:6379
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token-here

# ==========================================
# OpenAI Configuration
# ==========================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# ==========================================
# Server Configuration
# ==========================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# ==========================================
# WhatsApp Configuration
# ==========================================
WHATSAPP_SESSION_PATH=./sessions
WHATSAPP_WEBHOOK_URL=http://localhost:3001/webhooks/whatsapp

# ==========================================
# Security Configuration
# ==========================================
# IMPORTANT: Generate secure keys for production!
# Generate JWT_SECRET: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Generate ENCRYPTION_KEY: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=generate-with-crypto-randomBytes-64-chars
ENCRYPTION_KEY=generate-with-crypto-randomBytes-32-chars

# ==========================================
# Monitoring Configuration
# ==========================================
LOG_LEVEL=info
SENTRY_DSN=
